		$('#cboAccion').val(tr.find("td").eq(6).text());
		var row='';
		for (i = 0; i < nXML.length; i++) { 
			row += '<tr>';
			row += '<td>' +nXML[i] + '</td>';
			row += '<td><img type="image" id="delete" src="images/del.png" onclick="removeOA(this)"/></td>';
			row += '</tr>';
